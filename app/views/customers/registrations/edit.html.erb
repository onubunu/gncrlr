<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>
  
  <% if employee_signed_in? %>

    <h2>Customer Edit <%= resource_name.to_s.humanize %></h2>
    
    <div>
      <%= f.label :title %><br />
      <%= f.text_field :title, :readonly => true %>
    </div>

     <div>
      <%= f.label :prename %><br />
      <%= f.text_field :prename, :readonly => true %>
    </div>

    <div>
      <%= f.label :surname %><br />
      <%= f.text_field :surname, :readonly => true %>
    </div>
    
    <div>
      <%= f.label :phone %><br />
      <%= f.text_field :phone %>
    </div>

    <div>
      <%= f.label :phonecode %><br />
      <%= f.text_field :phonecode %>
    </div>

    <div>
      <%= f.label :birthdate %><br />
      <%= f.date_select :birthdate, :prompt => { day: "", month: "", year: "" } , :start_year => Date.current.year - 18, :end_year => Date.current.year - 120 %>
    </div>

    <div>
      <%= f.label :birthdate %><br />
      <%= f.date_field :birthdate, :readonly => true %>
    </div>

    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="field">            
      <%= f.hidden_field :password, autocomplete: "off", value: "password" %>
    </div>

    <div class="field">
      <%= f.hidden_field :password_confirmation, autocomplete: "off", value: "password" %>
    </div>

    <div class="field">            
      <%= f.hidden_field :current_password, autocomplete: "off", value: "password" %>
    </div>

    <div class="actions">
      <%= f.submit "Update" %>
    </div>
  
  <% else %>

    <h2>Edit <%= resource_name.to_s.humanize %></h2>
    
    <div>
      <%= f.label :prename %><br />
      <%= f.text_field :prename, :readonly => true %>
    </div>

    <div>
      <%= f.label :surname %><br />
      <%= f.text_field :surname, :readonly => true %>
    </div>
    
    <div>
      <%= f.label :phone %><br />
      <%= f.text_field :phone %>
    </div>
 
    <div>
      <%= f.label :birthdate %><br />
      <%= f.date_select :birthdate, :prompt => { day: "", month: "", year: "" } , :start_year => Date.current.year - 18, :end_year => Date.current.year - 120 %>
    </div>

    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="field">
      <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
      <%= f.password_field :password, autocomplete: "off" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off" %>
    </div>

    <div class="field">
      <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
      <%= f.password_field :current_password, autocomplete: "off" %>
    </div>

    <div class="actions">
      <%= f.submit "Update" %>
    </div>

  <% end %>

<% end %>

<%= link_to "Back", :back %>