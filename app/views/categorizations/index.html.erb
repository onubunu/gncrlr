<h1>Listing categorizations</h1>

<table>
  <thead>
    <tr>
      <th>Product</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categorizations.each do |categorization| %>
      <tr>
        <td><%= categorization.product_id %></td>
        <td><%= categorization.category_id %></td>
        <td><%= link_to 'Show', categorization %></td>
        <td><%= link_to 'Edit', edit_categorization_path(categorization) %></td>
        <td><%= link_to 'Destroy', categorization, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Categorization', new_categorization_path %>
